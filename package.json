{
  "name": "stage-magician",
  "version": "0.1.2",
  "author": {
    "name": "Gengyuan Huang"
  },
  "description": "an utility library that provides useful frontend visual and interaction",
  "license": "MIT",
  "homepage": "https://github.com/aghnu/stage-magician",
  "repository": {
    "type": "git",
    "url": "https://github.com/aghnu/stage-magician.git"
  },
  "bugs": {
    "url": "https://github.com/aghnu/stage-magician/issues"
  },
  "keywords": [
    "semaphore",
    "async",
    "axios",
    "critical-section",
    "event-loop"
  ],
  "type": "module",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/stage-magician.js",
      "require": "./dist/stage-magician.umd.cjs"
    },
    "./utils": {
      "types": "./dist/utils/index.d.ts",
      "import": "./dist/utils.js",
      "require": "./dist/utils.umd.cjs"
    }
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "dev": "vite --host",
    "build": "tsc && vite build",
    "test": "jest"
  },
  "devDependencies": {
    "@types/jest": "^29.5.11",
    "@types/node": "^20.10.6",
    "@typescript-eslint/eslint-plugin": "^6.4.0",
    "@typescript-eslint/parser": "^6.18.0",
    "eslint": "^8.0.1",
    "eslint-config-prettier": "^9.1.0",
    "eslint-config-standard-with-typescript": "^43.0.0",
    "eslint-plugin-import": "^2.25.2",
    "eslint-plugin-n": "^15.0.0 || ^16.0.0 ",
    "eslint-plugin-prettier": "^5.1.2",
    "eslint-plugin-promise": "^6.0.0",
    "jest": "^29.7.0",
    "prettier": "^3.1.1",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.2",
    "typescript": "*",
    "vite": "^5.0.8",
    "vite-plugin-dts": "^3.7.0"
  }
}
